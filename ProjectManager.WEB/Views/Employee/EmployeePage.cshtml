@{
}
@model ProjectManager.WEB.ViewModels.EntityViewModel.EmployeeViewModel
<main>
    <section>
        <h2>Employee:</h2>
        <div>
            <h1>@Model.FName @Model.SName @Model.Patronymic</h1>
            <br />
            <span>Email</span>
            <span>@Model.Email</span>
        </div>
    </section>


    @if (User.IsInRole("Admin"))
    {
        <!-- кнопки администрирования -->
        <section>
            <a asp-area="" asp-controller="Employee" asp-action="ChangePassword" asp-route-Id="@Model.Id"><input class="form-control" type="submit" value="Change password" /></a>
            <a asp-area="" asp-controller="Employee" asp-action="EditEmployee" asp-route-Id="@Model.Id"><input class="form-control" type="submit" value="Edit" /></a>
            <a asp-area="" asp-controller="Employee" asp-action="Delete" asp-route-Id="@Model.Id"><input class="form-control" type="submit" value="Delete" /></a>
        </section>
    }
</main>
